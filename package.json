{
  "name": "prodmanager-service",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only app/server.ts",
    "start": "node dist/server.js",
    "start:prod":"cross-env NODE_ENV=production npm run build && npm start",
    "serve:test":"cross-env NODE_ENV=test ts-node app/server.ts",
    "test": "cross-env NODE_ENV=test jest",
    
    "db:create": "dotenv -e .dev.env -- sequelize-cli db:create --config config/config.cjs",
    "db:migrate": "dotenv -e .dev.env -- sequelize-cli db:migrate --config config/config.cjs",
    "db:seed": "dotenv -e .dev.env -- sequelize-cli db:seed:all --config config/config.cjs",
    "db:setup": "npm run db:create && npm run db:migrate && npm run db:seed"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "glob": "^10.4.5",
    "nodemon": "^3.1.10",
    "pg": "^8.16.2",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "dotenv-cli": "^8.0.0",
    "sequelize-cli": "^6.6.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
